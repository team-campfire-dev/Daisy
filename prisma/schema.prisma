
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  id              String   @id // Google Place ID
  title           String
  address         String
  lat             Float
  lng             Float
  rating          Float?
  userRatingCount Int?
  category        String?
  photoUrl        String?
  openNow         Boolean?
  website         String?

  // Store raw JSON for future-proofing or extra fields
  rawData         String? // JSON string

  cachedAt        DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([lat, lng]) // Spatial index (simple)
}
