generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  id              String   @id
  title           String
  address         String
  lat             Float
  lng             Float
  rating          Float?
  userRatingCount Int?
  category        String?
  photoUrl        String?
  openNow         Boolean?
  website         String?
  rawData         String?
  openingHours    String?  // Storing as JSON string for simplicity/compatibility 
  cachedAt        DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([lat, lng])
}

model RouteCache {
  id          String   @id @default(uuid())
  startLat    Float
  startLng    Float
  endLat      Float
  endLng      Float
  distance    Float
  duration    Int
  pathJson    String
  createdAt   DateTime @default(now())

  @@index([startLat, startLng, endLat, endLng])
}

model Session {
  id          String   @id @default(uuid())
  sessionId   String   @unique
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  lastActive  DateTime @default(now())
  
  caches      UserCache[]
  
  @@index([sessionId])
  @@index([expiresAt])
}

model UserCache {
  id          String   @id @default(uuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  
  cacheType   String   // "place", "route", "course"
  cacheKey    String   // unique identifier for this cache
  cacheData   String   // JSON stringified data
  
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  
  @@index([sessionId, cacheType])
  @@index([expiresAt])
}
